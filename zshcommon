export ZSH=${ZSH:-"/home/$USER/.oh-my-zsh"}
ZSH_THEME="fahad"
DISABLE_AUTO_UPDATE="false"
DISABLE_UNTRACKED_FILES_DIRTY="true"

plugins=(
  git
  ssh-agent
  z
  zsh-interactive-cd
  zsh-autosuggestions
  zsh-syntax-highlighting
)

if [[ -f ~/.ssh/id_rsa ]]; then
  zstyle :omz:plugins:ssh-agent identities id_rsa
fi

source $ZSH/oh-my-zsh.sh

setopt appendhistory extendedglob nomatch notify incappendhistory shwordsplit completeinword
unsetopt beep sharehistory
bindkey -e

export EDITOR=vim
if which nvim &>/dev/null; then
  export EDITOR=nvim
fi
export LESS="-R"
export MOZ_USE_XINPUT2=1
export MACHINE=${MACHINE:-"home"}
export ZSH_AUTOSUGGEST_BUFFER_MAX_SIZE=20
export ZSH_AUTOSUGGEST_USE_ASYNC=1
export ZSH_AUTOSUGGEST_MANUAL_REBIND=1
export HISTSIZE=130000
export SAVEHIST=130000
export PATH="$HOME/.local/bin:$PATH"
export LC_COLLATE="C"
export PAGER="less $LESS"
export NNN_PLUG='p:preview-tui;z:autojump;f:fzcd;l:!less -R $nnn;b:!bat $nnn'
export NNN_FIFO='/tmp/nnn.fifo'
export NNN_TRASH=1
export NNN_OPENER="$HOME/.config/nnn/plugins/nuke"


alias ls='ls -lrth --color=auto'
alias grep='grep --color=auto'
alias reapplyprofile='exec zsh'
alias editprofile="$EDITOR $HOME/.zshrc && reapplyprofile"
alias editzshcommon="$EDITOR $HOME/.dotfiles/zshcommon && reapplyprofile"
alias editssh="$EDITOR $HOME/.ssh/config"
alias sdu='systemctl --user'
alias sd='systemctl'
alias susd='sudo systemctl'
alias view="$EDITOR -R"
alias udc='udisksctl'
alias open="xdg-open"
alias cpr='rsync -ah --info=progress2'
alias cp='cp --backup=numbered'
alias ln='ln --backup=numbered'
alias mv='mv -f --backup=numbered'

if [[ $WAYLAND_DISPLAY ]]; then
	alias pbcopy='wl-copy'
	alias pbpaste='wl-paste'
else
	alias pbcopy='xclip -i -sel clip'
	alias pbpaste='xclip -o -sel clip'
fi

if which trash-put &>/dev/null; then
  alias rrm='/bin/rm' # "real rm"
  alias rm='trash-put -v'
  alias tp='trash-put'
fi

function n () # {{{
{
    # Block nesting of nnn in subshells
    if [ -n $NNNLVL ] && [ "${NNNLVL:-0}" -ge 1 ]; then
        echo "nnn is already running"
        return
    fi

    # The behaviour is set to cd on quit (nnn checks if NNN_TMPFILE is set)
    # To cd on quit only on ^G, either remove the "export" as in:
    #    NNN_TMPFILE="${XDG_CONFIG_HOME:-$HOME/.config}/nnn/.lastd"
    #    (or, to a custom path: NNN_TMPFILE=/tmp/.lastd)
    # or, export NNN_TMPFILE after nnn invocation
    export NNN_TMPFILE="${XDG_CONFIG_HOME:-$HOME/.config}/nnn/.lastd"

    # Unmask ^Q (, ^V etc.) (if required, see `stty -a`) to Quit nnn
    # stty start undef
    # stty stop undef
    # stty lwrap undef
    # stty lnext undef

    nnn -T t -c -d -U -A -P p "$@"

    if [ -f "$NNN_TMPFILE" ]; then
            . "$NNN_TMPFILE"
            rrm -f "$NNN_TMPFILE" > /dev/null
    fi
}
# }}}


[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
