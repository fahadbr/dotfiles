# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=pango

[tapstatus]
command=/home/fahad/.config/i3blocks/scripts/tapstatus
#command=echo test
interval=once
signal=3

#[bluetooth]
#command=/home/fahad/.config/i3blocks/scripts/bluetooth
#interval=10

[brightness]
command=echo "scale=2;$(cat /sys/class/backlight/intel_backlight/brightness)/$(cat /sys/class/backlight/intel_backlight/max_brightness)*100" | bc | sed -E -n 's/([0-9]+)\.?([0-9]*)/\1%/p'
#command=echo "hello"
label=
interval=30
signal=2
color=#ffffff


# Volume indicator
#
# The first parameter sets the step (and units to display)
# The second parameter overrides the mixer selection
# See the script for details.
[volume]
# label=VOL
label=
instance=Master
#instance=PCM
interval=10
signal=1

